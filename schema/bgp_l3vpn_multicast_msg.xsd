<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
xmlns:ct="http://www.contrailsystems.com/bgp-l3vpn-multicast-cfg.xsd"
xsd:targetNamespace="http://www.contrailsystems.com/bgp-l3vpn-multicast-cfg.xsd">

<xsd:complexType name="McastNextHopType">
    <xsd:element name="af" type="xsd:integer"/>
    <xsd:element name="safi" type="xsd:integer"/>
    <xsd:element name="address" type="xsd:string"/>
    <xsd:element name="label" type="xsd:integer"/>
</xsd:complexType>

<xsd:complexType name="OlistType">
    <xsd:element name="next-hop" type="McastNextHopType" maxOccurs="unbounded"/>
</xsd:complexType>

<xsd:complexType name="McastMessageEntryType">
    <xsd:all>
        <xsd:element name="af" type="xsd:integer"/>
        <xsd:element name="safi" type="xsd:integer"/>
        <xsd:element name="label" type="xsd:integer"/>
        <xsd:element name="group" type="xsd:string"/>
        <xsd:element name="source" type="xsd:string"/>
        <xsd:element name="olist" type="OlistType"/>
    </xsd:all>
</xsd:complexType>

<xsd:complexType name="McastMessageItemType">
    <xsd:element name="entry" type="McastMessageEntryType"/>
</xsd:complexType>

<xsd:complexType name="McastMessageItemsType">
    <xsd:all>
        <xsd:element name="item" type="McastMessageItemType" maxOccurs="unbounded"/>
    </xsd:all>
</xsd:complexType>

<xsd:element name="items" type="McastMessageItemsType"/>

</xsd:schema>

