<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
xmlns:ct="http://www.contrailsystems.com/bgp-l3vpn-multicast-cfg.xsd"
xsd:targetNamespace="http://www.contrailsystems.com/bgp-l3vpn-multicast-cfg.xsd">

<!-- iq from agent to control-node  -->

<xsd:complexType name="NhIPAddressType">
    <xsd:element name="af" type="xsd:integer"/>
    <xsd:element name="address" type="xsd:string"/>
</xsd:complexType>

<xsd:complexType name="McastIPAddressType">
    <xsd:element name="af" type="xsd:integer"/>
    <xsd:element name="safi" type="xsd:integer"/>
    <xsd:element name="group" type="xsd:string"/>
    <xsd:element name="source" type="xsd:string"/>
</xsd:complexType>

<xsd:complexType name="McastEntryType">
    <xsd:all>
        <xsd:element name="nlri" type="McastIPAddressType"/>
        <xsd:element name="next-hop" type="NhIPAddressType"/>
        <xsd:element name="label" type="xsd:string"/>
    </xsd:all>
</xsd:complexType>

<xsd:complexType name="McastItemType">
    <xsd:element name="entry" type="McastEntryType"/>
</xsd:complexType>

<xsd:complexType name="McastItemsType">
    <xsd:all>
        <xsd:element name="item" type="McastItemType" maxOccurs="unbounded"/>
    </xsd:all>
</xsd:complexType>

<xsd:element name="items" type="McastItemsType"/>

</xsd:schema>

